@page "/"

@using SkiaSharp.Views.Blazor
@using MudBlazor
@inject IJSRuntime JSRuntime

<PageTitle>Primal</PageTitle>

<MudContainer Style="height: 100%;">
    <style type="text/css">
        html, body {
            margin: 0 auto;
            height: 100%;
            max-width: none;
            overflow: hidden;
        }

        .mud-container {
            padding: 0;
        }

        canvas {
            width: 100%;
            height: 100%;
        }

        #app {
            height: 100%;
        }
    </style>

    <SKCanvasView @ref="_drawingCanvas"
                  OnPaintSurface="DrawNextCanvasFrame"
                  @onmousewheel="OnMouseWheel"
                  @onmousedown="OnMouseDown"
                  @onmouseup="OnMouseUp"
                  @onmousemove="OnMouseMove"
                  IgnorePixelScaling="true" />
</MudContainer>

